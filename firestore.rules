rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colecci√≥n de usuarios
    // Cada usuario solo puede leer/escribir en SU propio documento y subcolecciones
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Regla recursiva para subcolecciones (como 'patients')
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
